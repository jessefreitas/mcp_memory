[
    {
        "key": "ctrl+shift+m ctrl+s",
        "command": "workbench.action.tasks.runTask",
        "args": "Run MCP Memory Server",
        "when": "workspaceFolder"
    },
    {
        "key": "ctrl+shift+m ctrl+b",
        "command": "workbench.action.tasks.runTask",
        "args": "build",
        "when": "workspaceFolder"
    },
    {
        "key": "ctrl+shift+m ctrl+w",
        "command": "workbench.action.tasks.runTask",
        "args": "Watch and Build",
        "when": "workspaceFolder"
    },
    {
        "key": "ctrl+shift+m ctrl+d",
        "command": "workbench.action.debug.start",
        "when": "workspaceFolder"
    },
    {
        "key": "ctrl+shift+m ctrl+t",
        "command": "workbench.action.tasks.runTask",
        "args": "Test Memory Operations",
        "when": "workspaceFolder"
    },
    {
        "key": "ctrl+shift+m ctrl+h",
        "command": "simpleBrowser.show",
        "args": "file:///c:/vscode/mcp_memory/dashboard.html",
        "when": "workspaceFolder"
    }
]