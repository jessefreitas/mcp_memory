{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "npm",
			"args": ["run", "build"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": "$tsc"
		},
		{
			"label": "Run MCP Memory Server",
			"type": "shell",
			"command": "node",
			"args": ["build/index.js"],
			"dependsOn": "build",
			"isBackground": true,
			"problemMatcher": [],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			}
		},
		{
			"label": "Watch and Build",
			"type": "shell",
			"command": "npm",
			"args": ["run", "dev"],
			"isBackground": true,
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": "$tsc-watch"
		},
		{
			"label": "Install Dependencies",
			"type": "shell",
			"command": "npm",
			"args": ["install"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Clean Build",
			"type": "shell",
			"command": "rmdir",
			"args": ["/s", "/q", "build"],
			"windows": {
				"command": "rmdir",
				"args": ["/s", "/q", "build"]
			},
			"linux": {
				"command": "rm",
				"args": ["-rf", "build"]
			},
			"osx": {
				"command": "rm",
				"args": ["-rf", "build"]
			},
			"group": "build"
		},
		{
			"label": "Test Memory Operations",
			"type": "shell",
			"command": "npm",
			"args": ["run", "server:memory"],
			"dependsOn": "build",
			"group": "test"
		},
		{
			"label": "Start Dashboard",
			"type": "shell",
			"command": "npm",
			"args": ["run", "dashboard"],
			"isBackground": true,
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "new"
			}
		},
		{
			"label": "Setup Project",
			"type": "shell",
			"command": "npm",
			"args": ["run", "setup"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "Enable Auto Start",
			"type": "shell",
			"command": "npm",
			"args": ["run", "autostart:enable"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "Disable Auto Start",
			"type": "shell",
			"command": "npm",
			"args": ["run", "autostart:disable"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "Setup Windows GUI",
			"type": "shell",
			"command": "powershell",
			"args": ["-ExecutionPolicy", "Bypass", "-File", "setup-windows.ps1"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "MCP: Initialize Integration",
			"type": "shell",
			"command": "powershell",
			"args": ["-ExecutionPolicy", "Bypass", "-File", "vscode-mcp.ps1", "init"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "MCP: Show Command Palette",
			"type": "shell",
			"command": "powershell",
			"args": ["-ExecutionPolicy", "Bypass", "-File", "vscode-mcp.ps1", "help"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "MCP: Start Server",
			"type": "shell",
			"command": "powershell",
			"args": ["-ExecutionPolicy", "Bypass", "-File", "vscode-mcp.ps1", "start"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "MCP: Stop Server", 
			"type": "shell",
			"command": "powershell",
			"args": ["-ExecutionPolicy", "Bypass", "-File", "vscode-mcp.ps1", "stop"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "MCP: Show Status",
			"type": "shell",
			"command": "powershell",
			"args": ["-ExecutionPolicy", "Bypass", "-File", "vscode-mcp.ps1", "status"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		}
	]
}